@model BTL_CharityWebsite.Models.NGUOIDUNG

@{
    ViewBag.Title = "ChinhSuaThongTin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .edit_info_container{
        height: 600px;
    }
    /* CSS cho tiêu đề */
    h2 {
        font-size: 28px;
        font-weight: bold;
        text-align: center;
        margin-bottom: 20px;
        color: #8b0000;
        padding-top: 50px;
    }

    /* CSS cho thông báo thành công và lỗi */
    .alert {
        padding: 15px;
        margin-bottom: 20px;
        border-radius: 4px;
        font-size: 16px;
    }

    .alert-success {
        text-align: center;
        background-color: #d4edda;
        color: #155724;
        border: 1px solid #c3e6cb;
    }

    .alert-danger {
        text-align: center;
        background-color: #f8d7da;
        color: #721c24;
        border: 1px solid #f5c6cb;
    }

    /* CSS cho form chỉnh sửa thông tin */
    .edit_info_form {
        max-width: 600px;
        margin: 0 auto;
        padding: 20px;
        border: 1px solid #ddd;
        border-radius: 8px;
        background-color: #f9f9f9;
    }

    .form-group {
        margin-bottom: 20px;
    }

     .form-group label {
         font-size: 14px;
         font-weight: bold;
         color: #555;
         display: block;
         margin-bottom: 8px;
     }

        .form-group input {
            width: 100%;
            padding: 12px;
            font-size: 14px;
            border: 1px solid #ccc;
            border-radius: 5px;
            box-sizing: border-box;
            transition: border-color 0.3s ease;
        }

            .form-group input:focus {
                border-color: #007bff;
                outline: none;
            }

    /* CSS cho nút Cập nhật */
    .updateInfo_btn{
        display: flex;
        justify-content: center;
    }
    .btn-primary {
        width: 30%;
        padding: 12px;
        font-size: 16px;
        font-weight: bold;
        color: #fff;
        background-color: #4faba7;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #377774;
        }

    /* CSS cho các trường hợp lỗi */
    .form-group input:invalid {
        border-color: #dc3545;
    }
</style>
<div class="edit_info_container">
    <h2>Chỉnh sửa thông tin cá nhân</h2>

    @if (TempData["TBThanhCong"] != null)
    {
        <div class="alert alert-success">@TempData["TBThanhCong"]</div>
    }
    @if (TempData["TBLoi"] != null)
    {
        <div class="alert alert-danger">@TempData["TBLoi"]</div>
    }
    <div class="edit_info_form">
        @using (Html.BeginForm("ChinhSuaThongTin", "User", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <div class="form-group">
                <label for="HoTen">Họ tên</label>
                @Html.TextBoxFor(model => model.HoTen, new { @class = "form-control", id = "HoTen", required = "required" })
            </div>
            <div class="form-group">
                <label for="Email">Email</label>
                @Html.TextBoxFor(model => model.Email, new { @class = "form-control", id = "Email", type = "email", required = "required" })
                @Html.ValidationMessageFor(n => n.Email)
            </div>
            <div class="form-group">
                <label for="SDT">Số điện thoại</label>
                @Html.TextBoxFor(model => model.SDT, new { @class = "form-control", id = "SDT", required = "required" })
            </div>
            <div class="form-group">
                <label for="DiaChi">Địa chỉ</label>
                @Html.TextBoxFor(model => model.DiaChi, new { @class = "form-control", id = "DiaChi", required = "required" })
            </div>
            <div class="updateInfo_btn">
                <button type="submit" class="btn btn-primary">Cập nhật</button>
            </div>
        }
    </div>
</div>