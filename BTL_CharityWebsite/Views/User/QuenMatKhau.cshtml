
@{
    ViewBag.Title = "QuenMatKhau";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .changepass-container {
        height: 30pc;
        padding-top: 30px;
    }

    .changepass_form {
        max-width: 500px;
        margin: 0 auto;
        padding: 20px;
        background-color: #f9f9f9;
        border: 1px solid #ddd;
        border-radius: 8px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

        .changepass_form h2 {
            text-align: center;
            font-size: 24px;
            font-weight: bold;
            margin-bottom: 20px;
            color: #333;
            text-transform: uppercase;
        }

        .changepass_form .form-group {
            margin-bottom: 20px;
        }

        .changepass_form label {
            display: block;
            font-size: 14px;
            color: #555;
            margin-bottom: 8px;
        }

        .changepass_form input[type="text"],
        .changepass_form input[type="password"] {
            width: 100%;
            padding: 10px;
            font-size: 14px;
            border: 1px solid #ccc;
            border-radius: 4px;
            box-sizing: border-box;
            transition: border-color 0.3s ease;
        }

            .changepass_form input[type="text"]:focus,
            .changepass_form input[type="password"]:focus {
                border-color: #007bff;
                outline: none;
            }

        .changepass_form .text-danger {
            color: #ff4d4d;
            font-size: 12px;
            margin-top: 5px;
            display: block;
        }

        .changepass_form button[type="submit"] {
            width: 100%;
            padding: 10px;
            font-size: 16px;
            font-weight: bold;
            color: #fff;
            background-color: #4faba7;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

            .changepass_form button[type="submit"]:hover {
                background-color: #377774;
            }
        .changepass_form p{
            text-align: center;
            color: darkred;
            font-size: 15px;
            padding-bottom: 20px;
        }
</style>

<div class="changepass-container">
    <div class="changepass_form">
        <h2>LẤY MẬT KHẨU</h2>
        @using (Html.BeginForm("QuenMatKhau", "User", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <div class="form-group">
                <label for="HoTen">Tên đăng nhập hoặc Email</label>
                <input type="text" name="key" id="key" class="form-control" required="required" />
                @if (ViewBag.Loi1 != null)
                {
                    <span class="text-danger">@ViewBag.Loi1</span>
                }
            </div>
            if (ViewBag.ThongBao != null)
            {
                <p>@ViewBag.ThongBao</p>
            }
            <button type="submit" class="btn btn-primary">Xác nhận</button>
        }
    </div>

</div>

