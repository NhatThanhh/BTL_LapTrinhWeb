@model BTL_CharityWebsite.Models.NGUOIDUNG
@{
    ViewBag.Title = "ThongTinNguoiDung";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    /* Container của thông tin cá nhân */
    .info-container {
        padding: 30px;
        max-width: 40%;
        margin: 0 auto;
        font-size: 20px;
        background-color: #ffffff4e;
        border-radius: 10px;
        min-height: 25pc;
    }

    /* CSS cho tiêu đề */
    h2 {
        font-size: 28px;
        font-weight: bold;
        text-align: center;
        margin-bottom: 20px;
        color: #8b0000;
        padding-top: 50px;
    }

    /* CSS cho thông báo thành công và lỗi */
    .alert {
        padding: 15px;
        margin-bottom: 20px;
        border-radius: 4px;
        font-size: 16px;
    }

    .alert-success {
        background-color: #d4edda;
        color: #155724;
        border: 1px solid #c3e6cb;
    }

    .alert-danger {
        background-color: #f8d7da;
        color: #721c24;
        border: 1px solid #f5c6cb;
    }

    /* CSS cho bảng thông tin người dùng */
    .table {
        width: 100%;
        margin-bottom: 20px;
        border-collapse: collapse;
    }

    .table th, .table td {
        padding: 10px;
        text-align: left;
        border-bottom: 1px solid #ddd;
    }

    .table th {
        font-weight: bold;
    }

    .table td {
    }

    /* CSS cho nút quay lại trang chủ */
    .edit_Info_btn{
        display:flex;
        justify-content: center;
    }
    .btn-primary {
        width: 40%;
        padding: 12px;
        font-size: 14px;
        font-weight: bold;
        color: #fff;
        background-color: #4faba7;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #377774;
        }
</style>

<div style="min-height: 35pc;">
    <h2>Thông Tin Cá Nhân</h2>
    <div class="info-container">
        <table class="table table-bordered">
            <tr>
                <th>Họ tên:</th>
                <td>@Model.HoTen</td>
            </tr>
            <tr>
                <th>Tài khoản:</th>
                <td>@Model.TaiKhoan</td>
            </tr>
            <tr>
                <th>Email:</th>
                <td>@Model.Email</td>
            </tr>
            <tr>
                <th>Địa chỉ:</th>
                <td>@Model.DiaChi</td>
            </tr>
            <tr>
                <th>Số điện thoại:</th>
                <td>@Model.SDT</td>
            </tr>
            <tr>
                <th>Ngày sinh:</th>
                <td>@(Model.NgaySinh.HasValue ? Model.NgaySinh.Value.ToString("dd/MM/yyyy") : "N/A")</td>
            </tr>
        </table>
        <div class="edit_Info_btn">
            <a href="@Url.Action("ChinhSuaThongTin", "User")" class="btn btn-primary">Chỉnh sửa</a>
        </div>

    </div>
</div>