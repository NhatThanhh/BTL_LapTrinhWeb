<!DOCTYPE html>
<html>
<head>
    <title>Online Charity Management System</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="keywords" content="Charity " />
    <script type="application/x-javascript">
        addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false);
               function hideURLbar(){ window.scrollTo(0,1); } </script>
    <!-- //for-mobile-apps -->
    <link href="~/Content/css/bootstrap.css" rel="stylesheet" type="text/css" media="all" />
    <link href="~/Content/css/ihover.css" rel="stylesheet" type="text/css" media="all" />
    <link href="~/Content/css/iconeffects.css" rel='stylesheet' type='text/css' />
    <link rel="stylesheet" href="~/Content/css/swipebox.css">
    <link href="~/Content/css/style.css" rel="stylesheet" type="text/css" media="all" />
    <!-- js -->
    <script type="text/javascript" src="~/Content/js/jquery-2.1.4.min.js"></script>
    <!-- //js -->
    <!-- fonts -->
    <link href='//fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800' rel='stylesheet' type='text/css'>
    <link href='//fonts.googleapis.com/css?family=Montserrat+Alternates:400,700' rel='stylesheet' type='text/css'>
    <!-- font awesome-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <!-- //fonts -->
    <script type="text/javascript" src="~/Content/js/numscroller-1.0.js"></script>
    <!-- swipe box js -->
    <script src="~/Content/js/jquery.swipebox.min.js" type="text/javascript"></script>
    <script type="text/javascript">
        jQuery(function ($) {
            $(".swipebox").swipebox();
        });
    </script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

    <!-- //swipe box js -->
    <!-- start-smoth-scrolling -->
    <script type="text/javascript" src="~/Content/js/move-top.js"></script>
    <script type="text/javascript" src="~/Content/js/easing.js"></script>
    <script type="text/javascript">
        jQuery(document).ready(function ($) {
            $(".scroll").click(function (event) {
                event.preventDefault();
                $('html,body').animate({ scrollTop: $(this.hash).offset().top }, 1000);
            });
        });
    </script>
    <style>
        .dropdown:hover > .dropdown-menu {
            display: block;
        }

        .dropdown-menu {
            display: none;
        }

    </style>
</head>
<body>
    <form id="form1" >
        <div>
            <div class="banner">
                <div class="container">
                    <div class="header-nav">
                        <nav class="navbar navbar-default">

                            <div class="navbar-header">
                                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                                    <span class="sr-only">Toggle navigation</span>
                                    <span class="icon-bar"></span>
                                    <span class="icon-bar"></span>
                                    <span class="icon-bar"></span>
                                </button>
                                <h1><a class="navbar-brand" href="@Url.Action("Index", "Home")"><img src="~/Content/images/logo2.png" alt="Logo" /></h1>
                            </div>
                            <!-- Collect the nav links, forms, and other content for toggling -->
                            <div class="collapse navbar-collapse nav-wil" id="bs-example-navbar-collapse-1">
                                <ul class="nav navbar-nav nav1 cl-effect-11" id="cl-effect-11">
                                    <li><a href="@Url.Action("Index", "Home")">HOME</a></li>
                                    <li><a href="@Url.Action("About", "Home")">ABOUT</a></li>
                                    <li><a href="@Url.Action("Gallery", "Home")">GALLERY</a></li>
                                    <li><a href="@Url.Action("Index", "Team")">TEAM</a></li>
                                    <li><a href="@Url.Action("Index", "Campaign")">CHIẾN DỊCH</a></li>
                                    <li><a href="@Url.Action("Contact", "Home")">CONTACT</a></li>
                                    <li><a href="@Url.Action("DangKy", "User")">REGISTRATION</a></li>
                                    @if (Session["TaiKhoan"] != null)
                                    {
                                        var user = (BTL_CharityWebsite.Models.NGUOIDUNG)Session["TaiKhoan"];
                                        <li class="dropdown">
                                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                                @user.HoTen <span class="caret"></span>
                                            </a>
                                            <ul class="dropdown-menu">
                                                <li><a href="@Url.Action("ThongTinNguoiDung", "User")">Thông tin cá nhân</a></li>
                                                <li><a href="@Url.Action("DangXuat", "User")">Đăng xuất</a></li>
                                            </ul>
                                        </li>
                                    }
                                    else
                                    {
                                        <li><a href="@Url.Action("DangNhap", "User")">LOGIN</a></li>
                                    }
                                </ul>
                            </div>
    <!-- /navbar-collapse -->
                            <div class="clearfix"></div>
                        </nav>
                    </div>
                    <div class="banner-info">
                        <div class="logo-text">
                            <img src="~/Content/images/logo.png" alt="" />
                            <p>Online Charity Services.</p>
                            <p>Donation Services.</p>
                        </div>
                    </div>
                </div>
            </div>
            <div>
                <asp:ContentPlaceHolder ID="ContentPlaceHolder1" runat="server">
                </asp:ContentPlaceHolder>
            </div>

    </form>
    <div class="main-content" style="width: 100%">
        @RenderBody()
    </div>
    <div class="footer">
        <div class="container">
            <div class="foo-left">
                <p> &copy; 2022 Charity Trust. All Rights Reserved | Developed by  <a href="#"> Jayesh Ahir</a></p>
            </div>
            <div class="foo-right">
                <ul>
                    <li><a class="fb" href="#"></a></li>
                    <li><a class="twitt" href="#"></a></li>
                    <li><a class="goog" href="#"></a></li>
                    <li><a class="drib" href="#"></a></li>
                </ul>
            </div>
            <div class="clearfix"></div>
        </div>
    </div>
    <!-- //footer -->
    <!-- //banner-bottom -->
    <!-- for bootstrap working -->
    <script src="js/bootstrap.js" type="text/javascript"></script>
    <!-- //for bootstrap working -->
    <!-- smooth scrolling -->
    <script type="text/javascript">
        $(document).ready(function () {

            $().UItoTop({ easingType: 'easeOutQuart' });
        });
    </script>
    <a href="#" id="toTop" style="display: block;"> <span id="toTopHover" style="opacity: 1;"> </span></a>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
