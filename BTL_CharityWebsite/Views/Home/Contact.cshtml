@{
    ViewBag.Title = "Contact";
    Layout = "~/Views/Shared/_Layout.cshtml"; <!-- Sử dụng layout chung -->
}

<div id="contact" class="contact-home">
    <div class="container">
        <div class="col-md-3 about-left text-center">
            <h3>Contact</h3>
        </div>
        <div class="col-md-9 about-right">
            <p>Charity Trust Services.</p>
        </div>
        <div class="clearfix"></div>
        <div class="gal-btm">
            <div class="map-home">
                <!-- Form -->
                <div class="col-md-6 login-pad">
                    <h2>Send Message</h2>
                    <form asp-action="SendMessage" method="post">
                        <div>
                            <label for="Name">Name</label>
                            <input type="text" id="Name" name="Name" class="form-control" required />
                        </div>
                        <div>
                            <label for="Email">Email</label>
                            <input type="email" id="Email" name="Email" class="form-control" required />
                        </div>
                        <div>
                            <label>
                                <input type="checkbox" name="Subscribe" checked /> Subscribe to our Newsletter
                            </label>
                        </div>
                        <div>
                            <label for="Message">Message</label>
                            <textarea id="Message" name="Message" class="form-control" required></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary">SEND</button>
                    </form>
                </div>

                <!-- Contact Info -->
                <div class="col-md-6 drop-pad sign-gd-two">
                    <h2>Contact Info</h2>
                    <p>Charity Services.</p>
                    <ul>
                        <li><i class="glyphicon glyphicon-map-marker" aria-hidden="true"></i>Address: 02, Ashavamegh Apartment, Main Branch, <span>Ahemadabad City, India.</span></li>
                        <li><i class="glyphicon glyphicon-envelope" aria-hidden="true"></i>Email: <a href="mailto:charitytrust111@gmail.com">charitytrust111@gmail.com</a></li>
                        <li><i class="glyphicon glyphicon-earphone" aria-hidden="true"></i>Phone: +91 9696858596</li>
                    </ul>
                </div>
                <div class="clearfix"></div>
            </div>
        </div>
    </div>
</div>
