﻿@model BTL_CharityWebsite.Models.NGUOIDUNG

@{
    ViewBag.Title = "SuaUser";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


<style>
    /* Tổng thể form */
    .form-horizontal {
        max-width: 60%;
        margin: 10px auto;
        padding: 20px 30px;
        background-color: #f9f9f9;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    /* Tiêu đề */
    h2 {
        text-align: center;
        color: #295e97;
        font-weight: bold;
        margin-top: 30px;
    }

    /* Nhóm form */
    .form-group {
        display: flex;
        flex-wrap: wrap; /* Remove default margin */
        padding: 0;
        margin-bottom: 20px;
        justify-content: center;
    }

        .form-group .edit-title {
            width: 20%; /* Adjust label width */
            font-weight: bold;
            color: #555;
            text-align: left;
            padding-right: 10px; /* Add spacing between label and value */
            margin-bottom: 10px;
        }

        .form-group .col-md-10 {
            width: 70%; /* Adjust value width */
            margin: 0; /* Remove default margin */
            color: #333;
            margin-bottom: 10px; /* Add spacing between rows */
        }

        /* Input chung */
        .form-group .form-control {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 6px;
            font-size: 14px;
            box-sizing: border-box;
        }


        /* TextArea */
        .form-group textarea {
            min-height: 120px;
            resize: vertical;
        }

        /* Hình ảnh */
        .form-group img {
            display: block;
            max-width: 200px;
            height: auto;
            margin-top: 10px;
            border: 1px solid #ddd;
            border-radius: 6px;
        }

        /* Nút Submit */
        .form-group .col-md-offset-2 {
            display: flex;
            justify-content: center;
        }

        .form-group .btn {
            background-color: #428ddd;
            color: white;
            padding: 12px 20px;
            border: none;
            border-radius: 6px;
            cursor: pointer;
            font-size: 16px;
            transition: background-color 0.3s ease;
        }

            .form-group .btn:hover {
                background-color: #0056b3;
            }
    .text-danger {
        color: #e74c3c;
        font-size: 13px;
        margin-top: 5px;
    }
</style>
<h2>CHỈNH SỬA THÔNG TIN NGƯỜI DÙNG</h2>

@using (Html.BeginForm("SuaUser", "Users", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.MaND)

        <div class="form-group">
            <div class="edit-title">Họ và tên</div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.HoTen, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.HoTen, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="edit-title">Tên tài khoản</div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.TaiKhoan, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TaiKhoan, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="edit-title">Mật khẩu</div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.MatKhau, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MatKhau, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="edit-title">Email</div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="edit-title">Số điện thoại</div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.SDT, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.SDT, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="edit-title">Địa chỉ</div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.DiaChi, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DiaChi, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="edit-title">Ngày sinh</div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.NgaySinh, new { htmlAttributes = new { @class = "form-control", type = "date" } })
                @Html.ValidationMessageFor(model => model.NgaySinh, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Danh Sách Người Dùng", "DanhSachNguoiDung")
</div>